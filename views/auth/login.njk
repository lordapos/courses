{% extends "layouts/shop.njk" %}

{% block content %}
    <section class="auth">
        <div class="auth__inner">
            <div class="auth__tabs">
                <div class="auth__tabs__head">
                    <a id="login" class="auth__tabs__item auth__tabs__item--active">Login</a>
                    <a id="registration" class="auth__tabs__item">Registration</a>
                </div>
                <div class="auth__tabs__content">
                    <div id="login-tab" class="auth__tabs__content__item auth__tabs__content__item--active">
                        <form action="/auth/login" method="post" class="auth__login-form">
                            <input type="email" class="auth__login-form__input" name="email" required placeholder="Email">
                            <input type="password" class="auth__login-form__input" name="password" required placeholder="Password">
                            <button type="submit" class="auth__login-form__submit">Login</button>
                        </form>
                    </div>
                    <div id="registration-tab" class="auth__tabs__content__item">
                        <form action="/auth/registration" method="post" class="auth__registration-form">
                            <input type="email" class="auth__registration-form__input" name="email" required placeholder="Email">
                            <input type="password" class="auth__registration-form__input" name="password" required placeholder="Password">
                            <input type="password" class="auth__registration-form__input" name="cpassword" required placeholder="Confirm password">
                            <button type="submit" class="auth__registration-form__submit">Registration</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}