{% extends "layouts/shop.njk" %}

{% block content %}
    <section class="auth">
        <div class="auth__inner">
            <h1>Set new password</h1>
            <div class="auth__tabs">
                <div class="auth__tabs__head">
                    <a href="/auth/login" id="login" class="auth__tabs__item">Login</a>
                    <a href="/auth/register" id="registration" class="auth__tabs__item">Registration</a>
                </div>
                <div class="auth__tabs__content">
                    <div id="login-tab" class="auth__tabs__content__item auth__tabs__content__item--active">
                        <form action="/auth/password" method="post" class="auth__login-form">
                            <input type="password" class="auth__login-form__input" name="password" required placeholder="New password">
                            <input type="hidden" name="_csrf" value="{{ csrf }}">
                            <input type="hidden" name="userId" value="{{ userId }}">
                            <input type="hidden" name="token" value="{{ token }}">
                            {% if error %}
                                <p class="auth__registration-form__error">{{ error }}</p>
                            {% endif %}
                            <button type="submit" class="auth__login-form__submit">Update password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}